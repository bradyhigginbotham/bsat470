<script>
var chart;
$(document).ready(function() {
	chart = new Highcharts.Chart({
		chart: {
			renderTo: 'stats_chart',
			type: 'areaspline'
		},
		title: {
			text: ''
		},
		subtitle: {
			text: ''	
		},
		xAxis: {
    	categories: [
				'<%= 	Date::ABBR_MONTHNAMES[5.months.ago.month].to_s + ", " + 5.months.ago.year.to_s  %>',
				'<%= 	Date::ABBR_MONTHNAMES[4.months.ago.month] %>',
				'<%= 	Date::ABBR_MONTHNAMES[3.month.ago.month] %>',
				'<%= 	Date::ABBR_MONTHNAMES[2.months.ago.month] %>',
				'<%= 	Date::ABBR_MONTHNAMES[1.months.ago.month] %>',
				'<%= 	Date::ABBR_MONTHNAMES[Time.now.month] %>'
			]
		},
		yAxis: {
			title: {
				text: 'Totals'
			},
			min: 0
		},
		tooltip: {
			formatter: function() {
	                return '<b>'+ this.series.name +'</b>: ' + this.y;
			}
		},
    navigation: {
        buttonOptions: {
            backgroundColor: {
                linearGradient: [0, 0, 0, 20],
                stops: [
                   [0.4, '#606060'],
                   [0.6, '#333333']
                ]
            }
        }
    },
		series: [{
			name: 'Clients',
			data: [1,3,6,4,2,7]
		}]
	});
	
	
});
</script>
<div id="stats_chart"></div>
