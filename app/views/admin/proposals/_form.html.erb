<%= semantic_form_for [:admin, @proposal] do |f| %>

	<fieldset class="inputs">
		<legend><span>Details</span></legend>
		<div id="proposal_fields">
			<ol>
				<%= f.input :proposal_num, :label => "Proposal No." %>
				<%= f.input :client, :input_html => { :class => "client_id" } %>
				<%= f.input :est_method, :label => "Method", :as => :select, :collection => ["Walk Through", "Floor Plan"], :include_blank => false %>
  			<%= f.input :status, :as => :select, :collection => ["Pending","Accepted","Declined"], :include_blank => false %>
				<%= f.input :customer_type, :as => :radio, :collection => ["General Contractor", "Commercial", "Government", "Residential"] %>
				<%= f.input :location_num, :label => "No. of Locations" %>
				<%= f.input :decision_date, :as => :string, :input_html => { :class => "datepicker" } %>
				<%= f.input :account %>
			</ol>
		</div>
	</fieldset>
  
			<%= f.semantic_fields_for :locations do |l| %>
				<%= l.inputs "Locations" do %>
				  <%= l.input :name %>
				  <%= l.input :address %>
					<%= l.semantic_fields_for :tasks do |t| %>
						<%= t.inputs "Tasks" do %>
							<%= t.input :est_hours %>
						<% end %>
					<% end %>
				<% end %>
			<% end %>

	<%= f.buttons :commit %>
<% end %>

<script src="/assets/ajax.js" type="text/javascript"></script>
