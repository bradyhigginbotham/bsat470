<script language="JavaScript">
$(function() {
  // change navigator buttons with each "slide"
  $('.carousel').bind('slid', function(){
    $(".carousel-dots a").removeAttr("class");

    if($(".item.active").hasClass("first")) {
     $(".carousel-dots a:eq(0)").attr("class","current");
    } else if($(".item.active").hasClass("second")) {
     $(".carousel-dots a:eq(1)").attr("class","current");
    } else if($(".item.active").hasClass("third")) {
     $(".carousel-dots a:eq(2)").attr("class","current");
    }
  });

  // show corresponding slide on button click
  $(".carousel-dots a").click(function(){
    slide_number = $(this).attr('data-slide-number');
    $('.carousel').carousel(parseInt(slide_number));

    $(".carousel-dots a").removeAttr("class");
    $(this).attr("class","current");
  });
});
</script>
